<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="myJoin.dao.system.MessageDao">
	<resultMap type="myJoin.domain.system.Message" id="MessageMap">
		<id property="id" column="ID" jdbcType="VARCHAR"/>
		<result property="sender" column="SENDER" jdbcType="VARCHAR"/>
		<result property="receiver" column="RECEIVER" jdbcType="VARCHAR"/>
		<result property="title" column="TITLE" jdbcType="VARCHAR"/>
		<result property="content" column="CONTENT" jdbcType="VARCHAR"/>
		<result property="state" column="STATE" jdbcType="VARCHAR"/>
		<result property="creator" column="CREATOR" jdbcType="VARCHAR"/>
		<result property="updator" column="UPDATOR" jdbcType="VARCHAR"/>
		<result property="createTime" column="CREATE_TIME" jdbcType="TIMESTAMP"/>
		<result property="updateTime" column="UPDATE_TIME" jdbcType="TIMESTAMP"/>
	</resultMap>
	
	<!-- 基础字段集合 -->
	<sql id="Base_Column_List">
		ID,SENDER,RECEIVER,TITLE,CONTENT,STATE,CREATOR,UPDATOR,CREATE_TIME,UPDATE_TIME
	</sql>
	<!-- 信息表查询条件 -->
	<sql id="messageConditions">
		<trim prefix="where (" suffix=")" prefixOverrides="and">
			<if test="id !=null and id !=''">
				and ID=#{id,jdbcType=VARCHAR}
			</if>
			<if test="sender !=null and sender !=''">
				and SENDER=#{sender,jdbcType=VARCHAR}
			</if>
			<if test="receiver !=null and receiver !=''">
				and RECEIVER=#{receiver,jdbcType=VARCHAR}
			</if>
			<if test="title !=null and title !=''">
				and TITLE=#{title,jdbcType=VARCHAR}
			</if>
			<if test="content !=null and content !=''">
				and CONTENT=#{content,jdbcType=VARCHAR}
			</if>
			<if test="state !=null and state !=''">
				and STATE=#{state,jdbcType=VARCHAR}
			</if>
			<if test="creator !=null and creator !=''">
				and CREATOR=#{creator,jdbcType=VARCHAR}
			</if>
			<if test="updator !=null and updator !=''">
				and UPDATOR=#{updator,jdbcType=VARCHAR}
			</if>
			<if test="createTime !=null">
				and CREATE_TIME=#{createTime,jdbcType=TIMESTAMP}
			</if>
			<if test="updateTime !=null">
				and UPDATE_TIME=#{updateTime,jdbcType=TIMESTAMP}
			</if>
		</trim>
	</sql>
	<insert id="insert" parameterType="myJoin.domain.system.Message">
		insert into MESSAGE
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id!=null and id!=''">
				ID,
			</if>
			<if test="sender !=null and sender !=''">
				SENDER,
			</if>
			<if test="receiver !=null and receiver !=''">
				RECEIVER,
			</if>
			<if test="title !=null and title !=''">
				TITLE,
			</if>
			<if test="content !=null and content !=''">
				CONTENT,
			</if>
			<if test="state !=null and state !=''">
				STATE,
			</if>
			<if test="creator !=null and creator !=''">
				CREATOR,
			</if>
			<if test="updator !=null and updator !=''">
				UPDATOR,
			</if>
			<if test="createTime !=null">
				CREATE_TIME,
			</if>
			<if test="updateTime !=null">
				UPDATE_TIME,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id!=null and id!=''">
				#{id},
			</if>
			<if test="sender !=null and sender !=''">
				#{sender},
			</if>
			<if test="receiver !=null and receiver !=''">
				#{receiver},
			</if>
			<if test="title !=null and title !=''">
				#{title},
			</if>
			<if test="content !=null and content !=''">
				#{content},
			</if>
			<if test="state !=null and state !=''">
				#{state},
			</if>
			<if test="creator !=null and creator !=''">
				#{creator},
			</if>
			<if test="updator !=null and updator !=''">
				#{updator},
			</if>
			<if test="createTime !=null">
				#{createTime},
			</if>
			<if test="updateTime !=null">
				#{updateTime},
			</if>
		</trim>
	</insert>
	<select id="findByVo" parameterType="myJoin.domain.system.Message" resultMap="MessageMap">
		select <include refid="Base_Column_List"/> from MESSAGE
		<include refid="messageConditions"/>
	</select>
	<select id="findListByVo" parameterType="myJoin.domain.system.Message" resultMap="MessageMap">
		select <include refid="Base_Column_List"/> from MESSAGE
		<include refid="messageConditions"/>
	</select>
	<select id="findListCountByVo" parameterType="myJoin.domain.system.Message" resultType="java.lang.Integer">
		select
		count(*)
		from MESSAGE
		<include refid="messageConditions"/>
	</select>
	<delete id="delete" parameterType="java.lang.String">
		delete from MESSAGE WHERE ID=#{id,jdbcType=VARCHAR}
	</delete>
	<update id="update" parameterType="myJoin.domain.system.Message">
		update MESSAGE
		<set>
			<if test="sender !=null ">
				SENDER=#{sender,jdbcType=VARCHAR}
			</if>
			<if test="receiver !=null ">
				RECEIVER=#{receiver,jdbcType=VARCHAR}
			</if>
			<if test="title !=null">
				TITLE=#{title,jdbcType=VARCHAR}
			</if>
			<if test="content !=null">
				CONTENT=#{content,jdbcType=VARCHAR}
			</if>
			<if test="state !=null">
				and STATE=#{state,jdbcType=VARCHAR}
			</if>
			<if test="creator !=null">
				CREATOR=#{creator,jdbcType=VARCHAR}
			</if>
			<if test="updator !=null">
				UPDATOR=#{updator,jdbcType=VARCHAR}
			</if>
			<if test="createTime !=null">
				CREATE_TIME=#{createTime,jdbcType=TIMESTAMP}
			</if>
			<if test="updateTime !=null">
				UPDATE_TIME=#{updateTime,jdbcType=TIMESTAMP}
			</if>
		</set>
		where ID = #{id,jdbcType=VARCHAR}
	</update>
</mapper>